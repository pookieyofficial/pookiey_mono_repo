{
    "scripts": {
        "backend": "cd backend && npm run dev",
        "web": "cd web && npm run dev",
        "mobile": "cd app && npx expo start -c --go --port 8082",
        "start:backend-first": "npm-run-all backend",
        "dev:web": "npm-run-all --sequential backend web",
        "dev:mobile": "npm-run-all --sequential backend mobile",
        "ngrok:tunnel": "ngrok http --url=https://deistic-alphabetically-lieselotte.ngrok-free.app 8080",
        "dev:all": "npm-run-all --sequential backend --parallel web mobile",
        "dev:all-ng": "npm-run-all --sequential backend --parallel mobile ngrok:tunnel"
    },
    "dependencies": {
        "npm-run-all": "^4.1.5"
    }
}